<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ivAuthorPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@color/background_floating_material_dark"
        android:layout_toStartOf="@+id/tvCaption"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/tvLocation"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/tvCaption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvAuthorTop"
        android:textStyle="bold"
        android:paddingRight="2dp"
        android:textColor="#2d5a80"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivAuthorPhoto"
        android:layout_toEndOf="@+id/ivAuthorPhoto"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:longClickable="false"
        android:layout_below="@+id/ivAuthorPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignTop="@+id/tvAuthor"
        android:layout_toRightOf="@+id/tvAuthor"
        android:layout_toEndOf="@+id/tvAuthor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvAuthor"
        android:textStyle="bold"
        android:paddingRight="2dp"
        android:layout_below="@+id/ivLikeIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:textColor="#2d5a80" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivLikeIcon"
        android:src="@drawable/heart_icon"
        android:layout_below="@+id/ivPhoto"
        android:maxHeight="2dip"
        android:maxWidth="2dip"
        android:minHeight="2dip"
        android:minWidth="2dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvLikes"
        android:layout_alignTop="@+id/ivLikeIcon"
        android:layout_toRightOf="@+id/ivLikeIcon"
        android:layout_toEndOf="@+id/ivLikeIcon"
        android:layout_marginTop="-6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#2d5a80" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/likes_label"
        android:id="@+id/tvLikesLabel"
        android:layout_alignTop="@+id/tvLikes"
        android:layout_toRightOf="@+id/tvLikes"
        android:layout_toEndOf="@+id/tvLikes"
        android:textColor="#2d5a80" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocation"
        android:layout_below="@+id/tvAuthorTop"
        android:layout_toLeftOf="@+id/tvLikesLabel"
        android:layout_toStartOf="@+id/tvLikesLabel"
        android:layout_marginLeft="7dp" />

</RelativeLayout>